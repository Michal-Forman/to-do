<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="utf-8">
  <title>To Do List</title>
  <link rel="stylesheet" href="css/styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
</head>

<body>

<div class="box" id="navbar">
  <a href="./drop"><img src="IMG/bin1.png" alt="bin"></a>
  <a href="./lists"><img src="IMG/list.png" alt="bin"></a>
  <a href="./add_list"><img src="IMG/add_list.png" alt="bin"></a>
  <a href="./profile"><img src="IMG/profile.png" alt="bin"></a>
</div>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box"> <!-- Remove duplicate class attribute -->
  <% newListItems.forEach(function(Item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input name="checkbox" class="checkbox" value="<%=Item._id%>" type="checkbox" onchange="this.form.submit()">
      <p><%=  Item.name  %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>">
  </form>
  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Action" autocomplete="off">
    <button type="submit" name="list" value="<%= listTitle%>">+</button>
  </form>
</div>

<%- include("footer") -%>
